<!DOCTYPE html>

<html>
<head>

	<title>@ViewBag.Title</title>

	<link href="@Url.Content("~/Content/mytemplate/")css/bootstrap.css" rel='stylesheet' type='text/css' />
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="@Url.Content("~/Content/mytemplate/")js/jquery.min.js"></script>
	<!-- Custom Theme files -->
	<link href="@Url.Content("~/Content/mytemplate/")css/style.css" rel="stylesheet" type="text/css" media="all" />
	<!-- Custom Theme files -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!--webfont-->
	<link href='@Url.Content("~/Content/mytemplate/")//fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900,200italic,300italic,400italic,600italic,700italic,900italic' rel='stylesheet' type='text/css'>
	<link href='@Url.Content("~/Content/mytemplate/")//fonts.googleapis.com/css?family=Lobster+Two:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
	<!--Animation-->
	<script src="@Url.Content("~/Content/mytemplate/")js/wow.min.js"></script>
	<link href="@Url.Content("~/Content/mytemplate/")css/animate.css" rel='stylesheet' type='text/css' />
	<script>
	new WOW().init();
	</script>
	<script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/move-top.js"></script>
	<script type="text/javascript" src="@Url.Content("~/Content/mytemplate/")js/easing.js"></script>
	<script type="text/javascript">
			jQuery(document).ready(function($) {
				$(".scroll").click(function(event){
					event.preventDefault();
					$('html,body').animate({scrollTop:$(this.hash).offset().top},1200);
				});
			});
	</script>
	<script src="@Url.Content("~/Content/mytemplate/")js/simpleCart.min.js"></script>
</head>
<body>
	<div class="header">
		<div class="container">
			<div class="top-header">
				<div class="logo">
					<a href="index.html"><img src="@Url.Content("~/Content/mytemplate/")images/logo.png" class="img-responsive" alt="" /></a>
				</div>
				<div class="queries">
					<p>Any Query? Call us !<span>01933818216/0152130997 </span><label>(11AM to 11PM)<label></p>
				</div>
				<div class="header-right">
					<div class="cart box_1">
						<a href="checkout.html">
							<h3> <span class="simpleCart_total"> $0.00 </span> (<span id="simpleCart_quantity" class="simpleCart_quantity"> 0 </span> items)<img src="images/bag.png" alt=""></h3>
						</a>
						<p><a href="javascript:;" class="simpleCart_empty">Empty card</a></p>
						<div class="clearfix"> </div>
					</div>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
		<div class="menu-bar">
			<div class="container">
				<div class="top-menu">
					<ul>
						<li>@Html.ActionLink("Home", "Profile", "Home")</li>
						<li>@Html.ActionLink("Popular Restaurants", "Index", "Restaurantls")</li>
						<!--<li><a href="index.html">Home</a></li>|-->
						<!--<li class="active"><a href="restaurants.html">Popular Restaurants</a></li>|-->
						
						<li>@Html.ActionLink("Contact", "Contact", "Home")</li>
						<div class="clearfix"></div>
					</ul>
				</div>
				<div class="login-section">
					<ul>
						<div class="tools-top">
							<div class="avatar-profile">
								<div class="user-edit">
									<h4 style="color:black">@Session["UserName"]</h4>
									<a style="color:black" href="/Home/CustomerAccountInfo">edit profile</a>
								</div>
								<ul class="tools-help">
									<li><a style="color:black" href="#" title="Help" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-question-circle"></i></a></li>
									<li><a style="color:black" href="/Home/Logout" title="Logout" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-sign-out"></i></a></li>
								</ul>
								<!--<div class="avatar-image">
			<img src="@Url.Content("~/Content/Profile/")img/avatar-profile.jpg" alt="avatar profile" class="img-responsive">
		</div>
	</div>-->
								<!--<li><a href="login.html">Login</a>  </li> |
	<li class="active">@Html.ActionLink("Register", "Create", "Consumers")</li>|
	<li><a href="#">Help</a></li>-->
								<div class="clearfix"></div>
</ul>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
	</div>

	<div>
		@RenderBody()
	</div>
</body>
</html>

